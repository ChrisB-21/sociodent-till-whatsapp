{
  "storage": {
    "rules": "storage.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",         
        "function": "api"
      },
      {
        "source": "**",              
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"   ,
     "runtime": "nodejs20"        
  }
}

